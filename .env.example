# REQUIRED Environment Variables
# These must be set or the application will fail to start

# Database Configuration (REQUIRED)
DATABASE_URL=postgres://username:password@localhost:5432/database_name?sslmode=disable

# JWT Configuration (REQUIRED)
JWT_SECRET=your-super-secret-jwt-key-here

# OPTIONAL Environment Variables
# These can also be configured in config.yaml file
# Viper will automatically read environment variables with GO_API_ prefix

# App Configuration
GO_API_APP_PORT=8000
GO_API_APP_ENVIRONMENT=development

# Security Configuration (Optional)
GO_API_SECURITY_JWT_EXPIRY=24h
GO_API_SECURITY_HEADERS_ENABLED=true
GO_API_SECURITY_TRUSTED_PROXIES=

# CORS Configuration (Optional)
GO_API_CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
GO_API_CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
GO_API_CORS_ALLOWED_HEADERS=Origin,Content-Type,Accept,Authorization

# Rate Limiting Configuration (Optional)
GO_API_RATE_LIMIT_ENABLED=true
GO_API_RATE_LIMIT_MAX=100
GO_API_RATE_LIMIT_WINDOW=1m

# Database Connection Pool (Optional)
GO_API_DATABASE_MAX_IDLE_CONNS=10
GO_API_DATABASE_MAX_OPEN_CONNS=100
GO_API_DATABASE_MAX_LIFETIME=1h

# Server Timeout Configuration (Optional)
GO_API_APP_READ_TIMEOUT=30s
GO_API_APP_WRITE_TIMEOUT=30s
GO_API_APP_IDLE_TIMEOUT=120s
GO_API_APP_SHUTDOWN_TIMEOUT=30s

# Logging Configuration (Optional)
GO_API_LOGGING_DIR=storage/logs
GO_API_LOGGING_MAX_SIZE=10485760  # 10MB in bytes
GO_API_LOGGING_MAX_AGE=30         # Keep logs for 30 days
GO_API_LOGGING_ENABLE_DAILY=true  # Create separate log files for each day

# Note: Duration format examples:
# - "300ms" (300 milliseconds)
# - "1.5h" (1 hour 30 minutes)
# - "2h45m" (2 hours 45 minutes)
# - "24h" (24 hours)
# - "30s" (30 seconds)
