# REQUIRED Environment Variables
# These must be set or the application will fail to start

# Database Configuration (REQUIRED)
DATABASE_URL=postgres://username:password@localhost:5432/database_name?sslmode=disable

# JWT Configuration (REQUIRED)
JWT_SECRET=your-super-secret-jwt-key-here

# OPTIONAL Environment Variables

# Server Configuration (Optional - defaults to 8000)
APP_PORT=8000

# Security Configuration (Optional)
JWT_EXPIRY=24h
ENVIRONMENT=development

# CORS Configuration (Optional)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=Origin,Content-Type,Accept,Authorization

# Rate Limiting Configuration (Optional)
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=1m

# Security Headers (Optional)
SECURITY_HEADERS_ENABLED=true
TRUSTED_PROXIES=

# Database Connection Pool (Optional)
DB_MAX_IDLE_CONNS=10
DB_MAX_OPEN_CONNS=100
DB_MAX_LIFETIME=1h

# Server Timeout Configuration (Optional)
READ_TIMEOUT=30s
WRITE_TIMEOUT=30s
IDLE_TIMEOUT=120s
SHUTDOWN_TIMEOUT=30s

# Logging Configuration (Optional)
LOG_DIR=storage/logs
LOG_MAX_SIZE=10485760  # 10MB in bytes
LOG_MAX_AGE=30         # Keep logs for 30 days
ENABLE_DAILY_LOG=true  # Create separate log files for each day

# Note: Duration format examples:
# - "300ms" (300 milliseconds)
# - "1.5h" (1 hour 30 minutes)
# - "2h45m" (2 hours 45 minutes)
# - "24h" (24 hours)
# - "30s" (30 seconds)
